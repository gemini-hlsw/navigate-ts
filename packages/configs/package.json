{
  "name": "navigate-configs",
  "version": "1.0.0",
  "main": "dist/index.js",
  "license": "BSD-3-Clause",
  "type": "module",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gemini-hlsw/navigate-ts.git",
    "directory": "packages/configs"
  },
  "exports": {
    ".": "./dist/index.js",
    "./db": "./dist/prisma/db.js"
  },
  "scripts": {
    "test": "pnpm test:integration",
    "test:integration": "node --test --enable-source-maps --test-timeout 20000 'src/integration/**/*.test.ts'",
    "generate": "prisma generate",
    "prebuild": "pnpm generate && pnpm codegen",
    "build": "tsc -b",
    "start": "pnpm build && pnpm preview",
    "preview": "node --enable-source-maps ./dist/index.js",
    "dev": "node --env-file=.env --watch --enable-source-maps ./src/index.ts",
    "codegen": "graphql-codegen --config tasks/codegen.ts",
    "codegen:watch": "pnpm codegen --watch 'src/graphql/**/*.ts' --watch '../schema/src/*.graphql'",
    "lint:eslint": "eslint .",
    "production": "pnpm prisma migrate deploy && pnpm prisma db seed && pnpm preview"
  },
  "dependencies": {
    "@prisma/adapter-pg": "6.17.1",
    "@prisma/client": "6.17.1",
    "graphql": "catalog:",
    "graphql-scalars": "1.24.2",
    "graphql-yoga": "5.16.0",
    "lucuma-core": "catalog:",
    "prisma": "6.17.1"
  },
  "devDependencies": {
    "@eddeee888/gcg-typescript-resolver-files": "0.14.0",
    "@graphql-codegen/cli": "catalog:",
    "@parcel/watcher": "catalog:",
    "@testcontainers/postgresql": "11.7.1",
    "@types/node": "catalog:",
    "lucuma-schemas": "catalog:",
    "navigate-server-schema": "catalog:",
    "typescript": "catalog:"
  },
  "files": [
    "dist",
    "prisma",
    "src",
    "tasks",
    "gen",
    "start-server.sh",
    "prisma.config.ts"
  ]
}
