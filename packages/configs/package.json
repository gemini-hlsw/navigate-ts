{
  "name": "navigate-configs",
  "version": "1.0.0",
  "main": "dist/index.js",
  "license": "BSD-3-Clause",
  "type": "module",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gemini-hlsw/navigate-ts.git",
    "directory": "packages/configs"
  },
  "exports": {
    ".": "./dist/index.js",
    "./db": "./dist/prisma/db.js"
  },
  "scripts": {
    "test": "pnpm test:integration",
    "test:integration": "node --test --enable-source-maps --test-timeout 20000 'src/integration/**/*.test.ts'",
    "generate": "prisma generate",
    "prebuild": "pnpm generate && pnpm codegen",
    "build": "tsc -b",
    "start": "pnpm build && pnpm preview",
    "preview": "node --enable-source-maps ./dist/index.js",
    "dev": "node --env-file=.env --watch --enable-source-maps ./src/index.ts",
    "codegen": "graphql-codegen --config tasks/codegen.ts",
    "codegen:watch": "pnpm codegen --watch 'src/graphql/**/*.ts' --watch 'src/graphql/*.graphql'",
    "lint:eslint": "eslint .",
    "production": "pnpm prisma migrate deploy && pnpm prisma db seed && pnpm preview"
  },
  "dependencies": {
    "@prisma/adapter-pg": "7.3.0",
    "@prisma/client": "7.3.0",
    "graphql": "16.12.0",
    "graphql-scalars": "1.25.0",
    "graphql-yoga": "5.18.0",
    "lucuma-core": "0.173.0",
    "prisma": "7.3.0"
  },
  "devDependencies": {
    "@eddeee888/gcg-typescript-resolver-files": "0.15.0",
    "@graphql-codegen/cli": "6.1.1",
    "@parcel/watcher": "2.5.6",
    "@testcontainers/postgresql": "11.11.0",
    "@types/node": "24.10.13",
    "lucuma-schemas": "0.177.0-20260217-2e3d340a"
  },
  "files": [
    "dist",
    "prisma",
    "src",
    "tasks",
    "gen",
    "start-server.sh",
    "prisma.config.ts"
  ]
}
