{
  "extends": ["@tsconfig/strictest/tsconfig", "@tsconfig/node24/tsconfig.json", "@tsconfig/node-ts/tsconfig.json"],
  "compilerOptions": {
    "rootDir": "src",
    "noEmit": true,
    "types": ["vitest/globals", "vitest", "@vitest/browser-playwright"],
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "exactOptionalPropertyTypes": false,
    "noPropertyAccessFromIndexSignature": false,
    "composite": true
  },
  "include": ["src"]
}
