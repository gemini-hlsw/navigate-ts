{
  "name": "navigate-ui",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gemini-hlsw/navigate-ts.git",
    "directory": "packages/ui"
  },
  "scripts": {
    "dev": "vite",
    "codegen:watch": "graphql-codegen --config tasks/codegen.ts --watch 'src/gql/**/*.ts' --watch '../configs/src/graphql/*.graphql'",
    "prebuild": "pnpm run codegen",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "lint:eslint": "eslint .",
    "codegen": "graphql-codegen --config tasks/codegen.ts"
  },
  "devDependencies": {
    "@apollo/client": "4.1.4",
    "@fortawesome/fontawesome-svg-core": "7.2.0",
    "@fortawesome/pro-regular-svg-icons": "7.2.0",
    "@fortawesome/react-fontawesome": "3.2.0",
    "@graphql-codegen/cli": "catalog:",
    "@graphql-codegen/client-preset": "5.2.2",
    "@graphql-typed-document-node/core": "3.2.0",
    "@parcel/watcher": "catalog:",
    "@tailwindcss/vite": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@vitejs/plugin-react": "catalog:",
    "@vitest/browser-playwright": "catalog:",
    "@xyflow/react": "12.10.0",
    "babel-plugin-react-compiler": "1.0.0",
    "clsx": "2.1.1",
    "date-fns": "4.1.0",
    "eslint-plugin-react": "catalog:",
    "eslint-plugin-react-hooks": "catalog:",
    "eslint-plugin-react-refresh": "catalog:",
    "graphql": "catalog:",
    "graphql-ws": "6.0.7",
    "jotai": "2.17.1",
    "lucuma-common-ui": "workspace:*",
    "lucuma-core": "catalog:",
    "lucuma-schemas": "catalog:",
    "lucuma-ui-css": "catalog:",
    "navigate-configs": "workspace:*",
    "playwright": "catalog:",
    "primereact": "10.9.7",
    "react": "catalog:",
    "react-dom": "catalog:",
    "react-router": "catalog:",
    "sass": "catalog:",
    "tailwind-merge": "catalog:",
    "tailwindcss": "catalog:",
    "vite": "catalog:",
    "vite-plugin-mkcert": "catalog:",
    "vitest": "catalog:",
    "vitest-browser-react": "catalog:"
  },
  "bundlemon": {
    "baseDir": "./dist",
    "pathLabels": {
      "hash": "[a-zA-Z0-9\\-_]+"
    },
    "files": [
      {
        "path": "assets/*-<hash>.{js,css}"
      }
    ],
    "reportOutput": [
      "github"
    ]
  }
}
