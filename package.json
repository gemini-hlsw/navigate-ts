{
  "name": "navigate-ts",
  "description": "Monorepo for navigate typescript projects",
  "version": "1.0.0",
  "type": "module",
  "packageManager": "pnpm@10.17.0",
  "license": "BSD-3-Clause",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gemini-hlsw/navigate-ts.git"
  },
  "scripts": {
    "ui": "pnpm --filter navigate-ui",
    "schema": "pnpm --filter navigate-schema",
    "configs": "pnpm --filter navigate-configs",
    "e2e": "pnpm --filter navigate-e2e",
    "all": "pnpm -r",
    "build": "tsc -b",
    "lint": "pnpm lint:prettier && pnpm lint:style && pnpm -r lint:eslint",
    "lint:prettier": "prettier --check .",
    "lint:style": "stylelint 'packages/ui/src/**/*.css'",
    "tsc:watch": "tsc --build --watch",
    "prepare": "node .husky/install.js"
  },
  "devDependencies": {
    "@eslint/js": "9.36.0",
    "@graphql-eslint/eslint-plugin": "4.4.0",
    "@tsconfig/node-ts": "23.6.1",
    "@tsconfig/node24": "24.0.1",
    "@tsconfig/strictest": "2.0.6",
    "@tsconfig/vite-react": "7.0.1",
    "@types/node": "catalog:",
    "eslint": "9.36.0",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-import-x": "4.16.1",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "globals": "16.4.0",
    "husky": "9.1.7",
    "lint-staged": "16.1.6",
    "prettier": "3.6.2",
    "stylelint-config-standard": "39.0.0",
    "stylelint": "16.24.0",
    "typescript": "catalog:",
    "typescript-eslint": "8.44.0"
  },
  "lint-staged": {
    "*.{js,mjs,ts,tsx,jsx,css,md,json,yml,yaml}": "prettier --write",
    "*.css": "stylelint --fix"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@prisma/client"
    ]
  }
}
