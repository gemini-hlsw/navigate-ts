{
  "name": "navigate-ui",
  "version": "0.1.0",
  "type": "module",
  "packageManager": "pnpm@10.7.1",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gemini-hlsw/navigate-ui.git"
  },
  "scripts": {
    "dev": "vite",
    "tsc:watch": "tsc -w",
    "codegen:watch": "graphql-codegen --config tasks/codegen.ts --watch",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "deploy": "./deploy.sh",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "lint": "pnpm lint:prettier && pnpm lint:eslint",
    "lint:prettier": "prettier --check .",
    "lint:eslint": "eslint .",
    "codegen": "graphql-codegen --config tasks/codegen.ts",
    "prepare": "node .husky/install.js"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@apollo/client": "3.13.7",
    "@eslint/js": "9.24.0",
    "@fortawesome/pro-regular-svg-icons": "6.7.2",
    "@fortawesome/pro-solid-svg-icons": "6.7.2",
    "@fortawesome/react-fontawesome": "0.2.2",
    "@graphql-codegen/cli": "5.0.5",
    "@graphql-codegen/client-preset": "4.8.0",
    "@graphql-typed-document-node/core": "3.2.0",
    "@parcel/watcher": "2.5.1",
    "@types/react": "19.1.1",
    "@types/react-dom": "19.1.2",
    "@types/uuid": "10.0.0",
    "@vitejs/plugin-react-swc": "3.8.1",
    "@vitest/browser": "3.1.1",
    "@vitest/coverage-v8": "3.1.1",
    "@vitest/ui": "3.1.1",
    "@xyflow/react": "12.5.5",
    "clsx": "2.1.1",
    "eslint": "9.24.0",
    "eslint-import-resolver-typescript": "4.3.2",
    "eslint-plugin-import-x": "4.10.2",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "globals": "16.0.0",
    "graphql": "16.10.0",
    "husky": "9.1.7",
    "jotai": "2.12.2",
    "lint-staged": "15.5.1",
    "lucuma-core": "0.123.0",
    "lucuma-schemas": "0.129.0",
    "lucuma-ui-css": "0.136.1",
    "playwright": "1.51.1",
    "prettier": "3.5.3",
    "primereact": "10.9.4",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-router": "7.5.0",
    "sass": "1.86.3",
    "subscriptions-transport-ws": "0.11.0",
    "typescript": "5.8.3",
    "typescript-eslint": "8.29.1",
    "uuid": "11.1.0",
    "vite": "6.2.5",
    "vite-plugin-mkcert": "1.17.8",
    "vitest": "3.1.1",
    "vitest-browser-react": "0.1.1"
  },
  "lint-staged": {
    "*.{js,mjs,ts,tsx,jsx,css,md,json,yml}": "prettier --write"
  },
  "bundlemon": {
    "baseDir": "./dist/navigate-ui",
    "pathLabels": {
      "hash": "[a-zA-Z0-9\\-_]+"
    },
    "files": [
      {
        "path": "assets/*-<hash>.{js,css}"
      }
    ],
    "reportOutput": [
      "github"
    ]
  }
}
